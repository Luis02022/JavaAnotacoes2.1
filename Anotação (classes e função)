public class Atividade10 {

    public static void main(String[] args) {
        Clientes cliente = new Clientes("Marta", 20);
        Funcionarios funcionario = new Funcionarios("Luis", "Punheteiro", 3000);
       // cliente.nome = "Marta";
       // cliente.idade = 20;
       
       // cliente.setNome("Luis");
       // cliente.setIdade(20);
       
        System.out.println("Nome: " + cliente.getNome());
        System.out.println("Idade: " + cliente.getIdade());
        
        System.out.println("\n Dados do funcionario:");
        System.out.println("Nome:" + funcionario.getNome());
        System.out.println("funcao:" + funcionario.getFuncao());
        System.out.println("salario:" + funcionario.getSalario());
    }
}
